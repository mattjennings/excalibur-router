{
  "include": ["src"],
  "compilerOptions": {
    "module": "NodeNext",
    "lib": ["esnext", "DOM"],
    "types": ["vite/client"],
    "target": "ES2015",
    "importHelpers": false,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "dist",
    "strict": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
